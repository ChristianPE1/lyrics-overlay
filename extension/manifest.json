{
  "manifest_version": 3,
  "name": "Lyrics Overlay Connector",
  "version": "1.0.0",
  "description": "Extracts lyrics from BetterLyrics and sends them to Lyrics Overlay",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
